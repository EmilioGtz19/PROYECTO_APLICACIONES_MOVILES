<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivKitchenRecipes"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/masterfoodimagotype"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvRecipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hola"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivKitchenRecipes"
        />

    <TextView
        android:id="@+id/tvFoodType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hola"
        app:layout_constraintTop_toBottomOf="@+id/tvRecipeTitle"
        app:layout_constraintStart_toEndOf="@+id/ivKitchenRecipes"
        />

    <TextView
        android:id="@+id/tvDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hola"
        app:layout_constraintTop_toBottomOf="@+id/tvFoodType"
        app:layout_constraintStart_toEndOf="@+id/ivKitchenRecipes"
        />
</androidx.constraintlayout.widget.ConstraintLayout>